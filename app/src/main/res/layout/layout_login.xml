<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/bg" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zémii"
        android:textColor="#ffffffff"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/tv"
        android:fontFamily="casual"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tv"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/infoPerso"
                        android:visibility="visible"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inscription\n\nNous voulons connaître un peu plus sur vous ♠"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#ff000000"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Votre Nom"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="#ff000000"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/Nom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:hint="Nom..."
                            android:background="@drawable/cadre_top_bot"
                            android:inputType="textAutoCorrect" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Votre Prénom"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="#ff000000"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/Prenom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cadre_top_bot"
                            android:hint="Prénom..."
                            android:inputType="textAutoCorrect" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="#ff000000"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <EditText
                            android:id="@+id/Phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:hint="+229"
                            android:editable="false"
                            android:enabled="false"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cadre_top_bot"
                            android:inputType="phone" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sexe"
                            android:textSize="12sp"
                            android:visibility="visible"
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="#ff000000"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <Spinner
                            android:id="@+id/sexe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:visibility="visible"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cadre_top_bot"
                            android:inputType="textAutoCorrect" />

                        <DatePicker
                            android:id="@+id/Annif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:singleLine="true"
                            android:padding="1dp"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/cadre_top_bot" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CREATION D'UN PSEUDO (ChatName)\nVous devez vous connecter avec votre chatName! Alors mémorisez la!"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:visibility="gone"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="#ff000000"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exemple: Voici votre PSEUDO"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:textStyle="italic"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:id="@+id/exemple"
                                android:textColor="#ff000000"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                />




                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DRAGOMIR58"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_gravity="left"
                                android:gravity="center"
                                android:visibility="gone"
                                android:textColor="#ff00"
                                android:id="@+id/psdo"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"

                                />

                        </LinearLayout>


                        <Button
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cadre_rond"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:text="SAUVEGARDER"
                            android:singleLine="true"
                            android:layout_marginBottom="10dp"
                            android:padding="1dp"
                            android:id="@+id/valider"
                            />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
